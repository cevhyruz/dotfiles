#!/usr/bin/env bash
function _source_bash_files() {

  # enable color support
  . "/home/devs/Projects/dotfiles/bash/colors"

  # source all files in /etc/.
  for file in /etc/profile.d/*; do
    [ -r "$file" ] \
       && . "$file"
  done
  unset file

 . "/home/devs/Projects/dotfiles/bash/bash_completion.d/tmux"
  # Custom keybindings.
  . "/home/devs/Projects/dotfiles/bash/keybindings"

  # [?] For local configuration that should
  # not be included in  the source control.
  if [ -r "/home/devs/Projects/dotfiles/_localrc/local.bashrc" ]; then
    . "/home/devs/Projects/dotfiles/_localrc/local.bashrc"
  fi

}

_source_bash_files
unset -f _source_bash_files
