#!/usr/bin/env bash

# ------------------------------------------------------------------
#  Miscellaneous
# ------------------------------------------------------------------
alias     path=' printf "%b\n" "${PATH//:/\\n}"'      # Print PATH env neatly.
alias bashopts=' printf "%b\n" "${BASHOPTS//:/\\n}"'  # Show bashopts env neatly.
alias   parent=' ps --no-headers -o comm "${PPID}"'   # which process spawns the shell?
alias     todo=" grep -r --exclude-dir='.git' [T]ODO" # List all pending tasks.
alias    fixme=" grep -r [F]IXME"                     # List all fixme comments.
alias      pst=" xclip -out"                          # Print xclip selection.
alias     open=" xdg-open ."
alias        r=" exec \${SHELL}"                      # Reload shell.
alias        e=" exit"                                # Exit terminal.

# ------------------------------------------------------------------
# Services
# ------------------------------------------------------------------
# TODO: port this as centralized control panel (function/executable)
# interactive control panel.
# Mysql.
alias   msstart=" service mysql start"
alias    msstop=" service mysql stop"
alias  msstatus=" service mysql status"
alias msrestart=" service mysql restart"

# Apache2.
alias   astart=" service apache2 start"
alias    astop=" service apache2 stop"
alias  astatus=" service apache2 status"
alias arestart=" service apache2 restart"

# Network manager.
alias   netstart=" service network-manager start"
alias    netstop=" service network-manager stop"
alias  netstatus=" service network-manager status"
alias netrestart=" service network-manager restart"

# Bluetooth.
alias   bstart=" service bluetooth start"
alias    bstop=" service bluetooth stop"
alias  bstatus=" service bluetooth status"
alias brestart=" service bluetooth restart"

#------------------------------------------
#              Git commands               |
#------------------------------------------
# git log - Show commit logs.

# alias alias='lol'

# alias g="git"

format="--format='%C(auto)%h%d %s %C(black)%C(green)%cr'"
alias lg="git log $format --oneline --graph -20"
#                   │         │      └─ Limit output to 20 lines.
#                   │         └─ Display text-based graphical commit history.
#                   └─ Shorthand for --pretty=oneline --abbrev-commit.

# git status - Show the working tree status as 'short-format'.

alias gsi="gs --ignored"          # Status with ignored files.

# git ls-files - Show info about files in index and the working tree.

alias gli="git ls-files -o -i --exclude-standard"
#                        │  │   └─ Use standard ignore rules.
#                        │  └── Show only ignored files.
#                        └─ Show other (i.e. untracked) files in the output.

# git show - Show one or more objects (blobs, trees, tags, and commits).

# alias gshow="git show --oneline"  # Show HEAD's log message and diffs.
#                       └─ Shorthand for --pretty=oneline --abbrev-commit.

# git diff - Show changes between the working tree and the index or a tree.

alias gdf="git diff"              # Show uncommited changes

# git commit - Record changes to the repository.

alias gc="git commit"            # Commit all staged file, fire up $EDITOR.
alias gca="gc --all"             # Stage all files, modified and untracked.
alias gcp="gc --patch"           # Choose which hunks/changes to commit.
alias gam="gc --amend"           # Amend changes to the tip of current branch.

# git add - Update index using the current content found in the working tree.

alias ga="git add"           # Add file/s to the index (staging area).
alias gan="ga --dry-run"     # See What would be added and/or will be ignored.
alias gai="ga --interactive" # Stage file interactively to the index.
alias gap="ga --patch"       # Choose which hunks to be added to index.

# git branch - List, create and delete branches.

alias gb="git branch"       # list all local branches
alias gbd="gb --delete"     # Delete given branch.

alias gu="git reset"              # Unstage file in index.

alias grc="git rm --cached"  # Fix not ignoring.

# git reset - Reset current HEAD to the specified state.

# Reset all changes to HEAD.
alias gr="git reset"

# Delete all uncommited changes to 'working tree' and 'index'
alias grh="gr --hard HEAD"

# Delete all uncommitted changes to index (retain working directory).
alias grs="gr --soft HEAD"

# Delete last commit, index and uncommited changes to working tree.
alias grh1="gr --hard HEAD~1"

# Delete last commit and indexed changes but retain working tree.
alias hrs1="gr --soft HEAD~1"

# Unstaged a file.
alias grf="git reset HEAD --"

#------------------------------------------
#             System commands             |
#------------------------------------------
alias sudo='sudo '                   # Allow aliases to be `sudo`ed.
#alias vim='$EDITOR '                # Expand from default editor.
alias rm='rm '                       # Allow aliases to be `rm`ed ([!] Dangerous)
alias vifm='vifm '                   # Allow alias expansion for vifm arguments.
alias which="which -a"               # Always show all matching pathnames.
alias type="type -ta"                # display all matching info about command type.
alias mkdir="mkdir -p"               # no errors if existing, make parent dir.

alias ls="lscolor --almost-all --classify --group-directories-first"
alias dir="dircolor --almost-all --classify --group-directories-first"
alias applist="dpkg --list"          # list installed apps using `apt`.
alias man1="ls /usr/share/man/man1"  # list man page section 1 -- user commands.

#------------------------------------------
#     Files and directories shortcuts     |
#------------------------------------------
# Frequently used directories.
alias home="~"
alias p="~/Projects"
alias dt="~/Desktop"
alias m="~/Music"
alias dl="~/Downloads"
alias d="~/Documents"
alias et="/etc"

# ------------------------------------------------------------------
# Node version manager
# ------------------------------------------------------------------
alias npmlg="npm list --global --depth 0"
alias nig="npm install --global"
alias nid="npm install --save-dev"
alias nr="npm run"

# ------------------------------------------------------------------
# Gulp task manager
# ------------------------------------------------------------------
alias gl="gulp"

# ------------------------------------------------------------------
#  programs
# ------------------------------------------------------------------
# custom socket name for nested local and remote sessions.
alias tmux="tmux -L codelabs"
