[user]
  useConfigOnly = true

[core]
  excludesfile   = "$HOME/Projects/dotfiles/git/.gitignore"
  attributesfile = "$HOME/Projects/dotfiles/git/.gitattributes"
  editor         = "nvim"
  untrackedCache = true

[commit]
  gpgsign  = true
  template = /home/devs/Projects/dotfiles/git/.gitmessage

[color]
  status = always
  ui     = always

[color "branch"]
  current = 35  italic bold # green
  local   = 248             # dimgrey
  remote  = 203 bold        # red

[color "diff"]
  meta = 241 bold
  frag = 142 bold # line info
  old  = 203      # deletions (red)
  new  = 35       # additions (green)

[url "git@github.com:"]
  insteadOf     = "gh:"
  pushInsteadOf = "github:"
  pushInsteadOf = "git://github.com/"

[url "git://github.com/"]
  insteadOf = "github:"

[url "git@gist.github.com:"]
  insteadOf     = "gst:"
  pushInsteadOf = "gist:"
  pushInsteadOf = "git://gist.github.com/"

[url "git://gist.github.com/"]
  insteadOf = "gist:"

[pager]
  branch = false
  log    = false

  # aliases pager
  contrib = false
  alias = false

[alias]
  amend = commit --amend --reuse-message=HEAD
  alias = "!git config --get-regexp alias | fzf"
  c     = "!a(){ echo \"${PWD}/$(basename \"${1}\" .git)\"; }; a"
  cd ="!a(){ cd \"${1}\"; }; a"
  s     = "!git status --short | fzf"
  b     = branch --all
  r     = remote --verbose
  lg    = log --oneline --graph -25 --all

  # list all ignored files.
  si = ls-files --ignored --others --exclude-standard
  #               │         │        └> Use standard ignore rules.
  #               │         └─────────> Show other files (i.e. untracked).
  #               └───────────────────> Show only ignored files

  # Create a branch or switch if it exists.
  mb = "!a(){ git checkout -b \"${1}\" 2> /dev/null || git checkout \"${1}\";}; a"

  # Credit an author on the last commit
  credit = "!git commit --amend --author \"${1} <${2}>\" -C HEAD"

  # Delete merged local branches.
  dm = "!git branch --merged | grep -v '\\*' | xargs -n 1 git branch -d"

  # List contributors with number of commits
  contrib = shortlog --summary --numbered

# Local git configuration. Include all your personal credentials
# and overrides here.
[include]
  path = ~/.gitconfig.local
