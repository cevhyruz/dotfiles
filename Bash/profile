# #!/usr/bin/env bash
# shellcheck shell=bash
# vi:ft=sh fdm=marker ts=2 sw=2 et

DOTFILES="${HOME}/Projects/dotfiles"

function Profile::main() {
  local BASH_DIR="${HOME}/Projects/dotfiles/Bash"
  local LOCALRC_DIR="${HOME}/Projects/dotfiles/localrc"

  # load library files.
  source "${DOTFILES}/utils/util.bash" \
    && _::source_all_from "${BASH_DIR}/lib"

  Profile::init
}

function Profile::init() {
  _::source_files_from "${BASH_DIR}/components"
  _::source_files_from "${BASH_DIR}/aliases"

  # local configuration.
  _::source_file "${LOCALRC_DIR}/local.bashrc"
}

Profile::main "${@}"
