let mapleader = ","          " Leader key.

" Reload vim
  nnoremap <silent> <leader>r :source $MYVIMRC<cr>:echo " Reloaded "<cr>

" Edit init.vim
  nnoremap <leader>e :e $MYVIMRC<cr> 

" Window navigation
  nnoremap <C-j> <C-W>j
  nnoremap <C-k> <C-W>k
  nnoremap <C-h> <C-W>h
  nnoremap <C-l> <C-W>l

