#!/usr/bin/env bash

function is_installed() {
  if [ "$(which "$1" &>/dev/null; echo "${?}")" == 0 ]; then
    echo 'installed'
  else
    echo 'not found'
  fi
}

  cat << EOF
┌─────────────────────────────┐
│ nvim │$(is_installed nvim)   │
────────
│ Ag   │$(is_installed ag)   │
│ fzf  │$(is_installed fzf)   │
│ vifm │$(is_installed vifm)   │
│ vifm │$(is_installed vifm)   │
└─────────────────────────────┘
EOF
